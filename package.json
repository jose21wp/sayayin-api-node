{
  "name": "sayayin-api",
  "version": "1.0.0",
  "description": "API REST de gestión de personajes Sayayin con Node.js, Express y MongoDB",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "lint": "eslint ./src --ext .ts",
    "swagger": "npx swagger-jsdoc -d src/docs/swaggerDef.js -o src/docs/swagger.json",
    "seed": "ts-node src/seed.ts"
  },
  "keywords": [
    "api",
    "sayayin",
    "nodejs",
    "express",
    "mongodb",
    "typescript"
  ],
  "author": "José Espinoza",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.1",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.50.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}